.row
  .col-md-10.col-md-offset-1
    %h1.text-center Welcome aboard!
    %p.text-center You can find here totaly random articles and pictures, enjoy.
    = image_tag 'arrow-left.png', class: 'prev'
    = image_tag 'arrow-right.png' , class: 'next'
    .slider
      - @articles.each do |article|
        .slider-element
          =image_tag article.photo
    = link_to 'New Article', new_article_path, class: 'btn btn-default text-right'
  .col-md-10.col-md-offset-1
    - @articles.each do |art|
      .row.index-art-list
        = link_to art do
          .col-md-12.rounded
            .col-md-3.img-wrapper.text-center
              = image_tag art.photo, class: 'index-photo'
            .col-md-9
              %h3.index-art-header
                = art.title
              %p.index-art-paragraph
                #{art.body[0..400]}...
            %p.art-date.text-right
              = art.created_at.strftime("%Y-%m-%d")
